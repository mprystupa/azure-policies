{
 "properties": {
  "displayName": "Correct Tag on Resource Group",
  "policyType": "Custom",
  "mode": "All",
  "description": "Every new Resource Group should have correct tag from the parameters.",
  "metadata": {
   "category": "Tagging",
   "createdBy": "5401b9c6-9585-4145-a10f-4409654d0e75",
   "createdOn": "2021-02-04T15:05:55.9438019Z",
   "updatedBy": "5401b9c6-9585-4145-a10f-4409654d0e75",
   "updatedOn": "2021-02-05T08:06:24.9311256Z"
  },
  "parameters": {
   "tagName": {
    "type": "String",
    "metadata": {
     "displayName": "Tag name",
     "description": "Name of the required tag."
    }
   },
   "validTagValues": {
    "type": "Array",
    "metadata": {
     "displayName": "Valid tag values",
     "description": "The list of allowed tag values."
    }
   }
  },
  "policyRule": {
   "if": {
    "not": {
     "allOf": [
      {
       "field": "type",
       "equals": "Microsoft.Resources/subscriptions/resourceGroups"
      },
      {
       "field": "[concat('tags[', parameters('tagName'), ']')]",
       "exists": true
      },
      {
       "field": "[concat('tags[', parameters('tagName'), ']')]",
       "in": "[parameters('validTagValues')]"
      }
     ]
    }
   },
   "then": {
    "effect": "deny"
   }
  }
 },
 "id": "/subscriptions/36983755-8396-459d-8afa-b7d546b5a217/providers/Microsoft.Authorization/policyDefinitions/c4da9574-70ed-45e4-81c2-272fc512c9e9",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "c4da9574-70ed-45e4-81c2-272fc512c9e9"
}