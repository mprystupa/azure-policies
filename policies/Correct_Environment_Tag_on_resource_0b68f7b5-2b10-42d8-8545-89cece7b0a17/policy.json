{
 "properties": {
  "displayName": "Correct Environment Tag on resource",
  "policyType": "Custom",
  "mode": "All",
  "description": "Every resource must have correct Environment tag.",
  "metadata": {
   "createdBy": "5401b9c6-9585-4145-a10f-4409654d0e75",
   "createdOn": "2021-02-05T15:19:18.0177478Z",
   "updatedBy": "5401b9c6-9585-4145-a10f-4409654d0e75",
   "updatedOn": "2021-02-05T15:25:57.0772846Z",
   "category": "Tags"
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "not": {
     "allOf": [
      {
       "field": "tags['Environment']",
       "exists": true
      },
      {
       "field": "tags['Environment']",
       "in": [
        "Live",
        "Testing",
        "Demo",
        "Experiment",
        "UAT"
       ]
      }
     ]
    }
   },
   "then": {
    "effect": "deny"
   }
  }
 },
