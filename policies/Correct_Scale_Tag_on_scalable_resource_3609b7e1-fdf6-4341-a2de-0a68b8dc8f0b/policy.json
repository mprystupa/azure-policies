{
 "properties": {
  "displayName": "Correct Scale Tag on scalable resource",
  "policyType": "Custom",
  "mode": "All",
  "description": "Every scalable resource should hava a valid Scale Tag. (TODO: Check for the scalable resource!!!)",
  "metadata": {
   "category": "Tags",
   "createdBy": "5401b9c6-9585-4145-a10f-4409654d0e75",
   "createdOn": "2021-02-05T15:25:43.9187855Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "not": {
     "allOf": [
      {
       "field": "tags['Scale']",
       "exists": true
      },
      {
       "field": "tags['Scale']",
       "in": [
        "Normal",
        "Temporary"
       ]
      }
     ]
    }
   },
   "then": {
    "effect": "deny"
   }
  }
 },
